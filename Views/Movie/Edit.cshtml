@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit movie</h1>

<h4>Change title, description or both.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value=@Model.Title/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="Option" style="display: flex; flex-direction: column; width: 7vw; margin-left: 9vw;">

                <div class="options-buttons" style="display: flex; flex-direction: row; margin-top: 3vh;">
                    <button type="button" value="Cancel" style="margin-left: -1vw; background-color: red;" onclick="location.replace('/movie')">Cancel</button>
                    <input type="submit" value="Save" style="margin-left: 1.5vw; background-color: #0a0;" />
                </div>

            </div> 
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}